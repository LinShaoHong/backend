{
  "source": "www.meitulu.com",
  "process": {
    "baseUrl": "https://www.meitulu.com",
    "xpath": "//div[@class='boxs']/ul[@class='img']/li",
    "type": "list",
    "category": {
      "xpath": "//ul[@id='tag_ul']/li",
      "subXpath": "a/@href",
      "indexes": [
        0,
        1,
        2
      ]
    },
    "paging": {
      "param": "%s.html",
      "start": 1,
      "end": 5,
      "includeFirst": false,
      "exclusive": false,
      "total": "//div[@id='pages']/a[last()-1]/text()"
    },
    "indexes": [
      0,
      1,
      2,
      3,
      4,
      5
    ],
    "fields": [
      {
        "name": "title",
        "type": "text",
        "xpath": "./p[@class='p_title']/a/text()",
        "subXpath": true
      },
      {
        "name": "originalUrl",
        "type": "text",
        "xpath": "./a/img/@src"
      },
      {
        "name": "tags",
        "type": "text",
        "xpath": "string-join(./p[last()-1]/a/text(), '|')"
      },
      {
        "name": "details",
        "type": "$sub",
        "subType": "href",
        "xpath": "./a/@href",
        "subProcess": {
          "type": "list",
          "paging": {
            "param": {
              "before": ".html",
              "after": "_%s.html"
            },
            "start": 1,
            "end": 5,
            "includeFirst": false,
            "exclusive": false,
            "total": "//div[@id='pages']/a[last()-1]/text()"
          },
          "xpath": "//div[@class='content']/center/img",
          "fields": [
            {
              "name": "originalUrl",
              "type": "text",
              "xpath": "concat('https://www.meitulu.com/img.html?img=',./@src)"
            }
          ]
        }
      }
    ]
  }
}
